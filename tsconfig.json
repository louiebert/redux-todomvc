{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "outDir": "ts-build",
        "experimentalDecorators": true
    },
    "awesomeTypescriptLoaderOptions": {
      "useBabel": true,
      "useCache": true
    },
    "include" : [
      "src/**/*",
      "node_modules/@types/*"
    ],
    "exclude" : [
      "src/sass/*"
    ]
}